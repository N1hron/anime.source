{
  "trailingComma": "es5",
  "tabWidth": 2,
  "semi": true,
  "arrowParens": "always",
  "endOfLine": "auto",
  "printWidth": 100,
  "overrides": [
    {
      "files": ["*.json", ".*rc"],
      "options": {
        "trailingComma": "none",
        "quoteProps": "preserve"
      }
    },
    {
      "files": ["*.config.{js,mjs,cjs,ts,mts,cts}"]
    }
  ]
}
